{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Kip",
    "scopeName": "source.kip",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#builtin-functions"
        },
        {
            "include": "#case-suffixes"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.block.kip",
                    "begin": "\\(\\*",
                    "end": "\\*\\)",
                    "patterns": [
                        {
                            "include": "#comments"
                        }
                    ]
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.kip",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.kip",
                            "match": "\\\\(n|t|r|\\\\|\")"
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.kip",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.kip",
                    "match": "\\b(ya da)\\b"
                },
                {
                    "name": "keyword.control.kip",
                    "match": "\\b(ya|olabilir|diyelim|olsun|Bir|var|yerleşik|olarak)\\b"
                },
                {
                    "name": "keyword.control.conditional.kip",
                    "match": "(doğruysa|yanlışsa|değilse|yokluksa)"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "entity.name.type.kip",
                    "match": "\\b(tam-sayı|dizge|doğruluk|listesi|olasılığı|boşluk|bitim|doğal-sayı)\\b"
                },
                {
                    "name": "entity.name.type.generic.kip",
                    "match": "\\b(öğe|öğenin)\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.kip",
                    "match": "\\b(doğru|yanlış)\\b"
                },
                {
                    "name": "constant.language.kip",
                    "match": "\\b(sıfır|boş|yokluğu|varlığı|durmak|durmaktır|bitimlik|bir|iki|üç|dört|beş|altı|yedi|sekiz|dokuz|on)\\b"
                }
            ]
        },
        "builtin-functions": {
            "patterns": [
                {
                    "name": "entity.name.function.builtin.io.kip",
                    "match": "\\b(yazmak|yaz|okumak|oku|yazıp|okuyup)\\b"
                },
                {
                    "name": "entity.name.function.builtin.arithmetic.kip",
                    "match": "\\b(toplamı|toplamını|farkı|farkını|çarpımı|çarpımını|bölümü|bölümünü)\\b"
                },
                {
                    "name": "entity.name.function.builtin.comparison.kip",
                    "match": "\\b(eşitliği|eşitliğini|küçüklüğü|küçüklüğünü|büyüklüğü|büyüklüğünü)\\b"
                },
                {
                    "name": "entity.name.function.builtin.string.kip",
                    "match": "\\b(uzunluğu|uzunluğunu|birleşimi|birleşimini|tam-sayı-hali)\\b"
                },
                {
                    "name": "entity.name.function.builtin.other.kip",
                    "match": "\\b(öncülü|öncülün|ardılı|ardılın|sıfırlığı|faktöriyeli|tersi|kopyası|eki)\\b"
                }
            ]
        },
        "case-suffixes": {
            "patterns": [
                {
                    "name": "keyword.operator.case.accusative.kip",
                    "match": "'(y)?[ıiuü]\\b"
                },
                {
                    "name": "keyword.operator.case.dative.kip",
                    "match": "'(y)?[ae]\\b"
                },
                {
                    "name": "keyword.operator.case.locative.kip",
                    "match": "'(d)?[ae]\\b"
                },
                {
                    "name": "keyword.operator.case.ablative.kip",
                    "match": "'(d)?[ae]n\\b"
                },
                {
                    "name": "keyword.operator.case.genitive.kip",
                    "match": "'(n)?[ıiuü]n\\b"
                },
                {
                    "name": "keyword.operator.case.instrumental.kip",
                    "match": "'(y)?l[ae]\\b"
                },
                {
                    "name": "keyword.operator.sequencing.kip",
                    "match": "[ıiuü]p\\b"
                }
            ]
        }
    }
}