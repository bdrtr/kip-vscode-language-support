{
    "name": "kip-language",
    "displayName": "Kip - Turkish Programming Language",
    "description": "Kip programlama dili için VS Code desteği - Türkçe dilbilgisi tabanlı programlama",
    "version": "1.1.0",
    "publisher": "algorynth",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kip-dili/kip.git"
    },
    "bugs": {
        "url": "https://github.com/kip-dili/kip/issues"
    },
    "homepage": "https://github.com/kip-dili/kip#readme",
    "license": "MIT",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "kip",
        "turkish",
        "türkçe",
        "programlama",
        "functional"
    ],
    "activationEvents": [
        "onLanguage:kip",
        "onStartupFinished"
    ],
    "contributes": {
        "languages": [
            {
                "id": "kip",
                "aliases": [
                    "Kip",
                    "kip"
                ],
                "extensions": [
                    ".kip"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/icon.png",
                    "dark": "./images/icon.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "kip",
                "scopeName": "source.kip",
                "path": "./syntaxes/kip.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "kip",
                "path": "./snippets/kip.json"
            }
        ],
        "configurationDefaults": {
            "[kip]": {
                "editor.defaultFormatter": "algorynth.kip-language",
                "editor.wordBasedSuggestions": "off"
            }
        },
        "commands": [
            {
                "command": "kip.runFile",
                "title": "Run Kip File",
                "category": "Kip",
                "icon": "$(play)"
            },
            {
                "command": "kip.showReferences",
                "title": "Show References",
                "category": "Kip"
            },
            {
                "command": "kip.extractFunction",
                "title": "Extract Function",
                "category": "Kip"
            }
        ],
        "configuration": {
            "title": "Kip",
            "properties": {
                "kip.compilerPath": {
                    "type": "string",
                    "default": "",
                    "description": "Kip derleyicisinin tam yolu (boş bırakılırsa PATH'ten aranır)",
                    "scope": "machine"
                },
                "kip.lspPath": {
                    "type": "string",
                    "default": "",
                    "description": "Kip LSP sunucusunun tam yolu (boş bırakılırsa otomatik bulunur)",
                    "scope": "machine"
                },
                "kip.enableCodeLens": {
                    "type": "boolean",
                    "default": true,
                    "description": "Referans sayısını gösteren Code Lens'i etkinleştir",
                    "scope": "resource"
                },
                "kip.formatOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Kaydetme sırasında otomatik formatla",
                    "scope": "resource"
                },
                "kip.enableWorkspaceSymbols": {
                    "type": "boolean",
                    "default": true,
                    "description": "Workspace sembol aramasını etkinleştir (Ctrl+T)",
                    "scope": "resource"
                },
                "[kip]": {
                    "type": "object",
                    "default": {
                        "editor.defaultFormatter": "algorynth.kip-language"
                    },
                    "description": "Kip dosyaları için editör ayarları"
                }
            }
        },
        "menus": {
            "editor/title/run": [
                {
                    "command": "kip.runFile",
                    "when": "resourceLangId == kip",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "command": "kip.runFile",
                    "when": "resourceLangId == kip",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "command": "kip.runFile",
                "key": "ctrl+shift+r",
                "mac": "cmd+shift+r",
                "when": "resourceLangId == kip"
            }
        ],
        "fileAssociations": [
            {
                "pattern": "**/*.kip",
                "icon": "images/icon.png"
            }
        ]
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "check": "node scripts/check-dependencies.js",
        "test": "node scripts/test-extension.js",
        "validate": "node scripts/validate-vsix.js",
        "quick-check": "bash scripts/quick-check.sh",
        "package": "npm run compile && vsce package",
        "release:patch": "node scripts/release.js patch",
        "release:minor": "node scripts/release.js minor",
        "release:major": "node scripts/release.js major"
    },
    "author": "",
    "dependencies": {
        "balanced-match": "^3.0.1",
        "semver": "^7.7.3",
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.19.30",
        "@types/vscode": "^1.80.0",
        "@vscode/vsce": "^2.20.0",
        "typescript": "^5.0.0"
    }
}
