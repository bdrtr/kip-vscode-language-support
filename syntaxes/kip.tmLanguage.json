{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Kip",
    "scopeName": "source.kip",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#type-definitions"
        },
        {
            "include": "#data-constructors"
        },
        {
            "include": "#function-signatures"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#identifiers"
        },
        {
            "include": "#case-suffixes"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.block.kip",
                    "begin": "\\(\\*",
                    "end": "\\*\\)",
                    "patterns": [
                        {
                            "include": "#comments"
                        }
                    ]
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.kip",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.kip",
                            "match": "\\\\(n|t|r|\\\\|\")"
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.kip",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.kip",
                    "match": "\\b(ya da|ya|olabilir|diyelim|olsun|Bir|var|yerleşik|olarak|ve|ile|ise|yoksa|için|kadar|diye|gibi)\\b"
                },
                {
                    "name": "keyword.control.verb.kip",
                    "match": "\\b(yazıp|yazmaktır|çalıştırmak|çalıştır|oku|okuyup|bitir|başla|dön|döndür)\\b"
                },
                {
                    "name": "keyword.control.conditional.kip",
                    "match": "(doğruysa|yanlışsa|değilse|yokluksa)"
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "variable.other.kip",
                    "match": "\\b[a-züöşğçıA-ZÜÖŞĞÇİ][a-züöşğçıA-ZÜÖŞĞÇİ\\-]*\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.kip",
                    "match": "\\b(doğru|yanlış)\\b"
                }
            ]
        },
        "case-suffixes": {
            "patterns": [
                {
                    "name": "keyword.operator.case.kip",
                    "match": "[']([yYnNdD]?[aAeEıIiİuUüÜ])"
                },
                {
                    "name": "keyword.operator.sequencing.kip",
                    "match": "[ıiuü]p\\b"
                }
            ]
        }
    }
}