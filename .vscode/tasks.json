{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Kip: Run Current File",
            "type": "shell",
            "command": "kip",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Kip: Run with Input",
            "type": "shell",
            "command": "kip",
            "args": [
                "${file}"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true
            },
            "problemMatcher": [],
            "options": {
                "env": {}
            }
        },
        {
            "label": "Kip: Check Syntax",
            "type": "shell",
            "command": "kip",
            "args": [
                "--check",
                "${file}"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "kip",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}